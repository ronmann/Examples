// Area of a rectangle
#include <iostream>
using namespace std;

const double pi = 3.14159;

int main()
{
    float length;
    float width;
    float area;

    cout << "Enter the length of the rectangle: ";
    cin >> length;
    cout << "Enter the width of the rectangle: ";
    cin >> width;
    area = length*width;

    cout << "The area of the rectangle is: " << area << endl;

    return 0;
}
